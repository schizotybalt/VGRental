@model VGRental.Model.Subscription
@{
    ViewBag.Title = "Subscribe";
}

<h2>@ViewBag.Title.</h2>
@using Microsoft.AspNet.Identity
@using System.Globalization
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Create", "Subscription", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Subscribe to AGR.</h4>
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.Label("Your ID", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.customerID,
                new { @class = "col-md-2 control-label" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.UserName,
            new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Customer.UserName,
                new { @class = "col-md-2 control-label" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Price,
                new { @class = "col-md-2 control-label" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ExpirationDate,
            new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ExpirationDate,
                new { @class = "col-md-2 control-label" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description,
            new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Description,
                new { @readonly="readonly", @class = "col-md-2 control-label" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Subscribe" />
            </div>
        </div>
    }
}
else
{
    <h2>Sign in to subscribe to AGR.</h2>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
